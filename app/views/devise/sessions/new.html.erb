<h2 class="font-bold text-2xl m-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"font-bold m-2 text-md"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "m-2" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"font-bold m-2 text-md" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"m-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field m-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
