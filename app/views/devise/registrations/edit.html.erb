<div class="relative">
  <h2 class="absolute top-left text-white font-bold text-4xl m-2">Edit Account</h2>
  <%= image_tag "brenna-huff-MBnj72Uc-iQ-unsplash.jpg", class: "object-cover h-40 w-fit"%>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-2">
    <%= f.label :email, class:"font-bold text-md" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field m-2">
    <%= f.label :current_password, class:"font-bold text-md" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password"%>
  </div>

  <div class="field m-2">
    <%= f.label :password, class:"font-bold text-md" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br/>
      <em class="text-sm"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field m-2">
    <%= f.label :password_confirmation, class:"font-bold text-md" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password"  %>
  </div>

    <div class="field m-2">
    <p class="font-bold text-md"> Position </p>
    <%= f.select :title, options_for_select([["Owner", 1], ["Chef", 2]], selected: @admin.title || nil), {}, { :class =>  "actions inline-block 
    px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-slate-800 hover:shadow-lg 
    focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out"}%>
    </div>
    <br/>

  <div class= "m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md 
      hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out">
    <%= f.submit "UPDATE" %>
  </div>

  <div class=" m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out">
  <%= link_to "Back", :back %>
  </div>

<% end %>

  <div class=" m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out">
  <%= button_to "CANCEL MY ACCOUNT", registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete your account?' }, method: :delete %>
  </div>
