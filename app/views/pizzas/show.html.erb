<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <h2 class="font-bold text-4xl">Pizza Created</h2>
    <br/>
    <div class="inline-block">
      <h2> <span class="font-bold"> New Pizza Name: </span> <%= @pizza.pName %></h2>
    </div>
    <br/>
    <br/>

    <%= link_to 'Edit', edit_pizza_path(@pizza), class: "m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md 
      hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out" %>
      
    <div class="inline-block ml-2">
      <%= button_to 'Delete', pizza_path(@pizza), method: :delete, class: "m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md 
      hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out" %>

    </div>

    <%= link_to 'Create New Pizza', new_pizza_path, class: "m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md 
      hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out" %>
    
    <%= link_to 'Back', pizzas_path, class: "m-2 actions inline-block px-6 py-2.5 bg-slate-500 text-white font-medium text-xs leading-tight uppercase rounded shadow-md 
      hover:bg-slate-800 hover:shadow-lg focus:bg-slate-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-900 active:shadow-lg transition duration-150 ease-in-out" %>
  </div>
</div>
