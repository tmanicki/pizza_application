  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Pizzas List</h1>
  </div>
  <div id="toppings" class="min-w-full">
     <% if @pizzas.empty?  %>
    <p>There are currently no avaliable pizzas</p>
    <div class="py-3"></div>
    <% else %>
    <table class="table-auto m-2 text-left text-lg w-[20rem]">
      <thead>
        <tr>
          <th>Pizza Name</th>
          <th>Topping('s)</th>
          <% if current_admin.title != 1%>
            <th colspan="2"></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @pizzas.each do |pizza| %>
          <tr>
            <td><%= pizza.pName %></td>
            <% if pizza.toppings.exists? %>
            <td>
              <% pizza.toppings.each do |top| %>
                <%= top.name %>
                <% if top.id != pizza.toppings[pizza.toppings.length - 1].id %>
                <h>, <h>
                <%end%>
              <%end %>
            </td>
            <% else %>
              <td>N/A</td>
              <% end %>

            <% if current_admin.title != 1%>
              <td><%= link_to 'Edit', edit_pizza_path(pizza), class: "text-sm rounded-lg py-1 ml-2 px-2 hover:text-white hover:bg-red-900 bg-gray-100 font-small" %></td>
              <td><%= button_to 'Delete', pizza_path(pizza), method: :delete, class: "text-sm rounded-lg py-1 ml-2 px-2 hover:text-white hover:bg-red-900 bg-gray-100 font-small" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
    <br/>
    <% if current_admin.title == 2%>  
      <%= link_to 'Create New Pizza', new_pizza_path, class: "rounded-lg py-3 ml-2 px-5 hover:text-white hover:bg-red-900 bg-gray-100 font-medium" %>
    <%end%>
  </div>
  <div class="py-2"></div>
</div>
