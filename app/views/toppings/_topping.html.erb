<div id="<%= dom_id topping %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= topping.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= topping.type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this topping", topping, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this topping', edit_topping_path(topping), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
