<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Pizza Toppings List</h1>
  </div>
  <div id="toppings" class="min-w-full">
     <% if @toppings.empty?  %>
    <p>There are currently no avaliable toppings</p>
    <div class="py-3"></div>
    <% else %>
    <table class="table-auto m-2 text-left text-lg w-[20rem]">
      <thead>
        <tr>
          <th>Name</th>
          <% if current_admin.title != 2%>
            <th colspan="2"></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @toppings.each do |topping| %>
          <tr>
            <td><%= topping.name %></td>

            <% if current_admin.title != 2%>
              <td><%= link_to 'Edit', edit_topping_path(topping), class: "text-sm rounded-lg py-1 ml-2 px-2 hover:text-white hover:bg-red-900 bg-gray-100 font-small" %></td>
              <td><%= button_to 'Delete', topping_path(topping), method: :delete, class: "text-sm rounded-lg py-1 ml-2 px-2 hover:text-white hover:bg-red-900 bg-gray-100 font-small" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
    <br/>
    <% if current_admin.title != 2%>
      <%= link_to 'Add New Topping', new_topping_path, class: "rounded-lg py-3 ml-2 px-5 hover:text-white hover:bg-red-900 bg-gray-100 font-medium" %>
    <% end %>
  </div>
  <div class="py-2"></div>
</div>
